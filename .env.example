# ================================
# GravityWork Environment Variables
# ================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# AI Provider - Using OpenRouter with FREE model (mistralai/devstral-2512:free)
AI_PROVIDER=openrouter
OPENAI_API_KEY=your-openai-api-key
GEMINI_API_KEY=your-gemini-api-key
# Get FREE API key at: https://openrouter.ai/keys
OPENROUTER_API_KEY=your-openrouter-api-key

# Qdrant Vector Database
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_COLLECTION=gravitywork_docs

# Jira Integration
JIRA_URL=https://your-domain.atlassian.net
JIRA_EMAIL=your-email@company.com
JIRA_TOKEN=your-jira-api-token

# Slack Integration
SLACK_BOT_TOKEN=xoxb-your-bot-token
SLACK_APP_TOKEN=xapp-your-app-token

# GitHub Integration
GITHUB_TOKEN=your-github-token
# PAT for pushing to https://github.com/hakuyuyu/GravityWork
# Generate at: https://github.com/settings/tokens
GITHUB_PAT=your-github-pat-token

# Application Settings
DEBUG=true
LOG_LEVEL=INFO
